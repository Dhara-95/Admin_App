<h1> New Volunteer</h1>
<%= form_with scope: :volunteer, url: volunteers_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :date %><br>
    <%= form.date_field :date %>
  </p>

  <p>
    <%= form.label :interviewer_name %><br>
    <%= form.text_field :interviewer_name %>
  </p>

  <p>
    <%= form.label :charity_log_number %><br>
    <%= form.number_field :charity_log_num %>
  </p>

  <p>
    <%= form.label :gender %><br>
    <%= form.text_field :gender %>
  </p>

  <p>
    <%= form.label :smoking %><br>
    <%= form.check_box :smoking %>
  </p>

  <p>
    <%= form.label :pets %><br>
    <%= form.check_box :pets %>
  </p>

  <p>
    <%= form.label :stairs %><br>
    <%= form.check_box :stairs %>
  </p>

  <p>
    <%= form.label :lifts %><br>
    <%= form.check_box :lifts %>
  </p>

  <p>
    <%= form.label :wheelchair_access %><br>
    <%= form.check_box :wheelchair_access %>
  </p>

  <p>
    <%= form.label :availability %><br>
    <%= form.text_field :availability %>
  </p>

  <p>
    <%= form.label :age_pref %><br>
    <%= form.text_field :age_pref %>
  </p>

  <p>
    <%= form.label :interests_skills %><br>
    <%= form.text_field :interests_skills %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>


<%= link_to 'Back', volunteers_path %>
