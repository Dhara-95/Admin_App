<h1> New Volunteer</h1>

<%= form_with scope: :volunteer, url: volunteers_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>  

  <p>
    <%= form.submit %>
  </p>
<% end %>   


<%= link_to 'Back', volunteers_path %>
