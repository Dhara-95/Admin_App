
<h1>Listing Volunteers</h1>


<%= link_to 'New volunteer', new_volunteer_path %>
 
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </tr>
 
  <% @volunteers.each do |volunteer| %>
    <tr>
      <td><%= volunteer.name %></td>
      <td><%= volunteer.email %></td>
      <td><%= link_to 'Show', volunteer_path(volunteer) %></td>
    </tr>
  <% end %>
</table>